<.header>
  Listing Positionen
  <:actions>
    <.link href={~p"/wahlen/#{@wahl_slug}/positionen/new"}>
      <.button>New Position</.button>
    </.link>
  </:actions>
</.header>

<.table
  id="positionen"
  rows={@positionen}
  row_click={&JS.navigate(~p"/wahlen/#{@wahl_slug}/positionen/#{&1}")}
>
  <:col :let={position} label="Name">{position.name}</:col>
  <:action :let={position}>
    <.link navigate={~p"/wahlen/#{@wahl_slug}/positionen/#{position}/optionen"}>Optionen</.link>
  </:action>
  <:action :let={position}>
    <div class="sr-only">
      <.link navigate={~p"/wahlen/#{@wahl_slug}/positionen/#{position}"}>Show</.link>
    </div>
    <.link navigate={~p"/wahlen/#{@wahl_slug}/positionen/#{position}/edit"}>Edit</.link>
  </:action>
  <:action :let={position}>
    <.link
      href={~p"/wahlen/#{@wahl_slug}/positionen/#{position}"}
      method="delete"
      data-confirm="Are you sure?"
    >
      Delete
    </.link>
  </:action>
</.table>
