<.header>
  Start Abstimmung
</.header>

<h2 class="text-lg">Positionen</h2>
<.table id="positionen" rows={@positionen}>
  <:col :let={position} label="Name">{position.name}</:col>
  <:action :let={position}>
    <.link
      href={~p"/wahlen/#{@wahl_slug}/start_abstimmung?position_id=#{position.id}"}
      method="post"
      data-confirm="Are you sure you want to start the Abstimmung for this position?"
    >
      Start Abstimmung
    </.link>
  </:action>
</.table>
