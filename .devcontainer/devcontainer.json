{
    "name": "Phoenix",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "jakebecker.elixir-ls",
                "mhutchie.git-graph"
            ]
        }
    },
    "postCreateCommand": "echo 'export FLYCTL_INSTALL=\"/root/.fly\"' >> ~/.bashrc && echo 'export PATH=\"$FLYCTL_INSTALL/bin:$PATH\"' >> ~/.bashrc && source ~/.bashrc"
}